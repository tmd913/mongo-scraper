<div id="wrapper">
    <div id="articles">
        <div class="row">
            {{#each articles}}
            <div class="col m6">
                <div class="card blue-grey darken-1">
                    <div class="card-content white-text">
                        <span class="card-title">{{title}} - {{category}}</span>
                        <p>{{preview}}</p>
                    </div>
                    <div class="card-action">
                        <a href="{{link}}" target="_blank">Read Article</a>
                        <a class="notes activator" href="#">Notes</a>
                    </div>
                    <div class="card-reveal">
                        <span class="card-title grey-text text-darken-4">
                            <i class="material-icons right">close</i>
                        </span>
                        <div class="row">
                            <div class="col m12">
                                {{#each notes}}
                                <div class="row note-content">
                                    <div class="col s1">
                                        <a class="delete btn-floating btn-small waves-effect waves-light red" data-id={{_id}}>
                                            <i class="del-icon material-icons">delete</i>
                                        </a>
                                    </div>
                                    <div class="col s11">
                                        <span>
                                            {{title}} - {{body}}
                                        </span>
                                    </div>
                                </div>
                                {{/each}}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col m12">
                                <form class="col s12">
                                    <div class="row">
                                        <div class="input-field col s12">
                                            <input id="note-title-input" class="note-title-input" type="text">
                                            <label for="note-title-input">Note Title</label>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="input-field col s12">
                                            <textarea id="note-body-input" class="note-body-input materialize-textarea"></textarea>
                                            <label for="note-body-input">Note Body</label>
                                        </div>
                                    </div>
                                    <button class="submit-note btn waves-effect waves-light blue-grey darken-1" type="submit" name="action" data-id={{_id}}>Submit</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
    <div id="notes"></div>
</div>